# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# all files
[*]
indent_style = tab
# indent_size = 4 # disable when indent_style = tab
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# limited support among editors
max_line_length = 160 # force hard line wrapping
